    <script>
        // Função para o contador regressivo
        const eventDate = new Date("2025-10-11T16:00:00-03:00").getTime();
        const countdownElement = document.getElementById("countdown");

        const updateCountdown = setInterval(() => {
            const now = new Date().getTime();
            const distance = eventDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("days").innerHTML = String(days).padStart(2, '0');
            document.getElementById("hours").innerHTML = String(hours).padStart(2, '0');
            document.getElementById("minutes").innerHTML = String(minutes).padStart(2, '0');
            document.getElementById("seconds").innerHTML = String(seconds).padStart(2, '0');

            if (distance < 0) {
                clearInterval(updateCountdown);
                countdownElement.innerHTML = 'Evento já aconteceu!';
            }
        }, 1000);

        // Função para copiar a chave Pix
        function copyPix() {
            const pixKey = document.getElementById("pix-chave").innerText;
            navigator.clipboard.writeText(pixKey)
                .then(() => alert("Chave Pix copiada!"))
                .catch(err => alert("Não foi possível copiar. Tente manualmente."));
        }
    </script>
